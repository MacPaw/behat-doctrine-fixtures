<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema-instance"
    xsd:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service autowire="true" id="BehatDoctrineFixtures\Database\DatabaseManagerFactory" class="BehatDoctrineFixtures\Database\DatabaseManagerFactory">
            <argument key="$cacheDir">%kernel.cache_dir%</argument>
        </service>
        <service public="true" autowire="true" id="BehatDoctrineFixtures\Database\DatabaseHelper" class="BehatDoctrineFixtures\Database\DatabaseHelper">
            <argument key="$databaseManagerFactory" type="service" id="BehatDoctrineFixtures\Database\DatabaseManagerFactory"/>
            <argument key="$fixturesLoader" type="service" id="fidry_alice_data_fixtures.doctrine.persister_loader"/>
        </service>
    </services>
</container>
